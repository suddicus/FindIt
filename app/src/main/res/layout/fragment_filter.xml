<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:padding="16dp">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/typeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTitle"
        android:layout_marginTop="8dp"
        android:text="ItemType："
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/typeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTitle"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/typeTv" />

    <TextView
        android:id="@+id/dateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/typeTv"
        android:layout_marginTop="8dp"
        android:text="Date Range："
        android:textSize="16sp" />

    <TextView
        android:id="@+id/between"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/typeTv"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/fromDate"
        android:text="to"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/fromDate"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:layout_below="@id/typeTv"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/dateTv"
        android:layout_centerVertical="true"
        android:inputType="date"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/toDate"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:layout_below="@id/typeTv"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/between"
        android:inputType="date"
        android:textSize="14sp" />
    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toDate"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/primary"
        android:text="Clear"
        android:textSize="16dp" />
    <Button
        android:id="@+id/btnApply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toDate"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/primary"
        android:text="Apply"
        android:textSize="16dp" />

</RelativeLayout>