<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.upload.UploadFragment">

    <Button
        android:id="@+id/findItem"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:backgroundTint="@color/primary"
        android:gravity="bottom|center_horizontal"
        android:padding="15dp"
        android:text="Find Item"
        android:textAlignment="center"
        android:textColor="?attr/colorControlNormal"
        android:textSize="26dp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lostItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <ImageView
        android:id="@+id/find"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/search_24"
        app:layout_constraintStart_toStartOf="@id/findItem"
        app:layout_constraintTop_toTopOf="@id/findItem" />

    <Button
        android:id="@+id/lostItem"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:backgroundTint="@color/primary"
        android:gravity="bottom|center_horizontal"
        android:padding="15dp"
        android:text="Item Found"
        android:textAlignment="center"
        android:textColor="?attr/colorControlNormal"
        android:textSize="26dp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/findItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/lost"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/add_24"
        app:layout_constraintStart_toStartOf="@id/lostItem"
        app:layout_constraintTop_toTopOf="@id/lostItem" />


</androidx.constraintlayout.widget.ConstraintLayout>